@using ImagesEF.Data
@model ImagesViewModel
<div class="row">
    <div class="col-md-8 offset-md-2">
        @foreach (Image i in Model.Images)
        {
            <div class="jumbotron" style="margin-bottom: 20px; text-align: center;">
                <a href="/home/viewimage?id=@i.Id">
                    <h3>@i.Title</h3>
                    <h5>Uploaded at: @i.DateUploaded</h5>
                    <img style="width: 400px;" src="/uploads/@i.Address" />
                </a>
            </div>
        }
    </div>
</div>
